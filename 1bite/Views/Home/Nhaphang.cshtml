@{
    ViewBag.Title = "Nhaphang";
}
@{
    Layout = null;
}
@using _1bite.Models
@model ViewModel
<link href="~/Content/bootstrap/bootstrap-reboot.css" rel="stylesheet" />
<link href="~/Content/css/Banhang.css" rel="stylesheet" />
<html>
<head>
    <link href="~/Content/bootstrap/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/Content/css/Banhang.css" rel="stylesheet" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <meta name="viewport" content="width=device-width" />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script>
        window.jQuery || document.write('<script src="http://mysite.com/jquery.min.js"><\/script>')
    </script>
    <script language="JavaScript" type="text/javascript" src="/js/jquery-1.2.6.min.js"></script>
    <script language="JavaScript" type="text/javascript" src="/js/jquery-ui-personalized-1.5.2.packed.js"></script>
    <script language="JavaScript" type="text/javascript" src="/js/sprinkle.js"></script>
    <script type="text/javascript" class="init">
        function addGoods() {
            $.ajax({
                url: '/home/addProduct',
                data: {
                    'id': $("#selectproduct option:selected").val(),
                    'amount': $("#productamount").val(),
                    'unitPrice': $("#unitprice").val(),
                    'discount': $("#product-discount").val()
                },
                type: 'POST',
                cache: false,
                success: function (result) {
                    $('#ImportListProduct').empty().append(result);
                },
                error: function (err) {
                    alert('Error occured ' + err.status);
                }
            });
        }
        function discount() {
            var url = '@Url.Action("ImportDiscount", "Home")';
            $.post(url, { 'discount': $('#discount').val(), 'shipFee': $('#shipFee').val() }, function (view) {
                $("#bill").val(view);
            });
        }
        function addImport() {
            var url = '@Url.Action("addImport", "Home")';
            $.post(url, { 'discount': $('#discount').val(), 'shipFee': $("#shipFee").val(), 'sourceId': $("#select-source option:selected").val() }, function (view) {
                location.reload();
            });
        }
        function delImport(id) {
            var id = id;
            $.ajax({
                url: '/Home/DeleteImport',
                type: "post",
                data: { 'id': id },
                cache: false,
                success: function (result) {
                    $('#Import').empty().append(result);
                    location.reload();
                }
            });
        }
        function seeImport(id) {
            var id = id;
            $.ajax({
                url: '/Home/seeImport',
                type: "post",
                data: { 'id': id },
                cache: false,
                success: function (result) {
                    $('#ImportDetail').empty().append(result);
                }
            });
        }
    </script>
    <title>Nhập hàng</title>
</head>
<body>
    <a href="/Home/Manage">Go back</a>
    <h1>Import</h1>
    <div class="inputOrder">
        <h4 class="sellerName">Staff: @ViewBag.messagestaffname</h4>
        <h4>Product Name:</h4>
        <select id="selectproduct" name="selectproduct">
            @foreach (Product product in Model.Product)
            {
                <option value="@product.id">@product.name (@product.unit)</option>
            }
        </select>
        <h4>Amount:</h4>
        <input name="productamount" id="productamount" min="1" step="any" type="number" value="1">
        <h4>Unit Price:</h4>
        <input name="unitprice" id="unitprice" min="1" step="any" type="number" value="1">
        <h4>Product's Discount:</h4>
        <input name="product-discount" id="product-discount" step="any" type="number" value="0">
        <button id="addRow" onclick="addGoods(), discount()">Add Product</button>
        <table class="display" style="width:100%">
            <caption>Product list of Import order</caption>
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th scope="col">
                        Product Name
                    </th>
                    <th scope="col">
                        Amount
                    </th>
                    <th scope="col">
                        Price
                    </th>
                    <th scope="col">
                        Total
                    </th>
                    <th>Control</th>
                </tr>
            </thead>
            <tbody id="ImportListProduct">
            </tbody>
        </table>
    </div>
    <div class="importOverallInformation">
        <h4>Overall discount:</h4>
        <input name="discount" id="discount" min="0" step="any" type="number" value="0" onkeypress="discount(this.val)">
        <h4>Ship fee:</h4>
        <input name="shipFee" id="shipFee" min="0" step="any" type="number" value="0" >
        <h4>Source:</h4>
        <select id="select-source" name="select-source">
            @foreach (Source product in Model.Source)
            {
                <option value="@product.id">@product.source</option>
            }
        </select>
        <h4>Total cost:</h4>
        <button type="button" onclick="discount()">Làm mới</button>
        <input name="bill" id="bill" min="0" step="any" type="number" value="0" readonly="readonly"><p>VND</p>
    </div>
    <button type="button" onclick="window.location.href = '/Home/Nhaphang'" title="Refresh data">Cancel</button>
    <input type="button" value="Confirm" onclick="addImport()" /><br />
    <div class="importHistory" 4>
        <h4>Imported today</h4>
        <a href="/Home/ViewAllImport">See all Imported</a>
        <table cellpadding="1" cellspacing="1" name="Order" id="Order" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Time</th>
                    <th>Discount</th>
                    <th>Ship fee</th>
                    <th>Source</th>
                    <th>Total</th>
                    <th>Control</th>
                </tr>
            </thead>
            @foreach (Import order in Model.Import)
            {
                <tr>
                    <td>@order.id</td>
                    <td>@order.date</td>
                    <td>@order.overallDiscount</td>
                    <td>@order.shipFee</td>
                    <td>@order.source</td>
                    <td>@order.total</td>
                    <td>
                        <button onclick="seeImport('@order.id')" data-id="@order.id">See Import</button>
                        <button onclick="delImport('@order.id')" data-id="@order.id">Delete</button>
                    </td>
                </tr>
            }
        </table>
        <table class="display" style="width:100%">
            <caption>Product list of Import order</caption>
            <thead>
                <tr>
                    <th>Import ID</th>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Unit</th>
                    <th>Unit Price</th>
                    <th>Amount</th>
                    <th>Discount</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody id="ImportDetail">
            </tbody>
        </table>
    </div>
</body>
</html>
