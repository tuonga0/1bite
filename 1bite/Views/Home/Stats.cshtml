@{
    Layout = null;
}
<!DOCTYPE html>
@using _1bite.Models
@model ViewModel
<html>
<head>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <meta name="viewport" content="width=device-width" />
    <script src="jquery-3.5.1.min.js"></script>
    <script type="text/javascript" language="javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.js"></script>
    <link href="~/Content/bootstrap/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/Content/css/Banhang.css" rel="stylesheet" />
    <title>Số liệu bán hàng</title>
</head>
<body>
    <div>
        <h4>Profit:  @Model.profit</h4>
        <table id="table_id" class="display" width="100%">
            <thead>
                <tr>
                    <th>Dish ID</th>
                    <th>Dish Name</th>
                    <th>Total Ordered Amount</th>
                    <th>Total Income</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.OrderDetails != null)
                {
                    foreach (OrderDetails order in Model.OrderDetails)
                    {
                        <tr>
                            <td>@order.id</td>
                            <td>@order.name</td>
                            <td>@order.orderedAmount</td>
                            <td>@order.moneyReceived</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</body>
</html>
<script>
    $(document).ready(function () {
        $('#table_id').DataTable();
    });
</script>
